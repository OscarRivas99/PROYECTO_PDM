<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.accounts.AccountFragment"
        android:background="#FAF7FA">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dashboard_cuenta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:background="#FAFCFC" />

        <Button
            android:id="@+id/btn_agregar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/rv_dashboard_cuenta"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-54dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/nueva_cuenta"
            android:backgroundTint="#070707" />


    </RelativeLayout>
</layout>