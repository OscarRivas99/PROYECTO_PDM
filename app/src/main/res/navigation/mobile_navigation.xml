<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.menu_app.ui.home.HomeFragment"
        android:label="Movimientos"
        tools:layout="@layout/fragment_home">

        <argument
            android:name="categoria"
            app:argType="string" />
        <argument
            android:name="monto"
            app:argType="string" />
        <argument
            android:name="fecha"
            app:argType="string" />
        <argument
            android:name="descripcion"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_home_self2"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home" />
        <action
            android:id="@+id/action_nav_home_to_nav_cuentas2"
            app:destination="@id/nav_cuentas" />
    </fragment>





    <fragment
        android:id="@+id/nav_avisos"
        android:name="com.example.menu_app.ui.avisos.AvisosFragments"
        android:label="Avisos"
        tools:layout="@layout/fragment_avisos" />
    <fragment
        android:id="@+id/perfil"
        android:name="com.example.menu_app.ui.perfil.perfil"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />

    //Modificando

    <fragment
        android:id="@+id/nav_cuentas"
        android:name="com.example.menu_app.ui.accounts.AccountsFragment"
        android:label="Cuentas"
        tools:layout="@layout/fragment_accounts">
        <action
            android:id="@+id/action_nav_home_to_nav_cuentas"
            app:destination="@id/nav_cuentas"
        />
    </fragment>
    <activity
        android:id="@+id/login2"
        android:name="com.example.menu_app.ui.login.login2"
        android:label="login2" />

</navigation>